{
    "defaultSeverity": "error",
    "extends": "tslint-config-standard",
    "jsRules": {},
    "rules": {
        "semicolon": [true, "never"],
        "variable-name": false,
        "prefer-const": true,
        "function-name": false,
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true
        ],
        "interface-name":[
            false
        ],
        "arrow-parens": false,
        "object-literal-sort-keys": false,
        "member-access": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "always",
                    "typeLiterals": "ignore"
                },
                "singleline": "never"
            }
        ],
        "space-before-function-paren": false
    },
    "rulesDirectory": []
}